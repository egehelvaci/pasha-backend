<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8" />
  <title>{{companyName}} - Ürün Kataloğu</title>
  <style>
    @font-face {
      font-family: 'Roboto';
      src: url('data:application/font-woff;charset=utf-8;base64,{{robotoRegularFont}}') format('woff');
      font-weight: normal;
      font-style: normal;
    }
    
    @font-face {
      font-family: 'Roboto';
      src: url('data:application/font-woff;charset=utf-8;base64,{{robotoBoldFont}}') format('woff');
      font-weight: bold;
      font-style: normal;
    }
    
    body { 
      font-family: 'Roboto', Arial, sans-serif; 
      padding: 40px; 
      background-image: url('{{backgroundImage}}');
      background-size: cover;
      background-repeat: no-repeat;
      background-attachment: fixed;
      color: #fff;
    }
    
    h1, h2 { 
      text-align: center; 
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    }
    
    .collection { 
      page-break-before: always; 
      margin-top: 50px;
    }
    
    .collection h2 { 
      margin-bottom: 20px; 
      font-size: 24px; 
      border-bottom: 2px solid #fff; 
      padding-bottom: 10px; 
    }
    
    .product-list { 
      display: flex; 
      flex-wrap: wrap; 
      justify-content: space-between; 
    }
    
    .product { 
      width: 48%; 
      border: 1px solid #ccc; 
      padding: 10px; 
      margin-bottom: 20px; 
      box-sizing: border-box; 
      position: relative; 
      background-color: rgba(0, 0, 0, 0.6);
      border-radius: 8px;
    }
    
    .product-image { 
      width: 100%; 
      height: 200px; 
      background-color: rgba(255, 255, 255, 0.1); 
      display: flex; 
      justify-content: center; 
      align-items: center; 
      margin-bottom: 10px; 
      border-radius: 4px;
    }
    
    .product-image img { 
      max-width: 100%; 
      max-height: 200px; 
      object-fit: contain; 
    }
    
    .product h3 { 
      font-size: 16px; 
      text-align: center; 
      margin: 10px 0; 
      color: #fff;
    }
    
    .product p {
      color: #ddd;
    }
    
    .no-image-text { 
      text-align: center; 
      color: #999; 
    }
    
    .footer { 
      text-align: center; 
      font-size: 12px; 
      margin-top: 40px; 
      color: #fff;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
    }
    
    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.3);
      z-index: -1;
    }
    
    .catalog-header {
      background-color: rgba(0, 0, 0, 0.7);
      padding: 20px;
      border-radius: 10px;
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
  <div class="overlay"></div>
  
  <div class="catalog-header">
    <h1>{{companyName}} Ürün Kataloğu</h1>
    <p style="text-align:center">Tarih: {{formatDate}}</p>
  </div>

  {{#each collections}}
    <div class="collection">
      <h2>{{collectionName}}</h2>
      <div class="product-list">
        {{#each products}}
          <div class="product">
            <div class="product-image">
              {{#if productImage}}
                <img src="{{productImage}}" alt="{{name}}">
              {{else}}
                <div class="no-image-text">[Ürün Görseli Mevcut Değil]</div>
              {{/if}}
            </div>
            <h3>{{name}}</h3>
            {{#if description}}
              <p>{{description}}</p>
            {{/if}}
          </div>
        {{/each}}
      </div>
    </div>
  {{/each}}

  <div class="footer">
    © {{companyName}} - {{currentYear}}
  </div>
</body>
</html> 